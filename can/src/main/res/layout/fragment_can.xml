<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/channel"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <Spinner
            android:id="@+id/frame_type"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/channel"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:entries="@array/can_frame_type"/>

        <TextView
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/frame_type"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="23sp"
            android:text="ID"/>

        <EditText
            android:id="@+id/id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:singleLine="true"
            android:text="1FFFFFFF"/>

        <TextView
            android:id="@+id/data_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="23sp"
            android:text="DATA"/>

        <EditText
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/data_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:minEms="11"
            android:singleLine="true"
            android:text="31 32 33 34 35 36 37 38"/>

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Send"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Spinner
            android:id="@+id/baud_rate"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/set_baud_rate"
            app:layout_constraintBottom_toBottomOf="@+id/set_baud_rate"
            android:entries="@array/can_baud_rate"/>

        <Button
            android:id="@+id/set_baud_rate"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/baud_rate"
            android:layout_marginLeft="5dp"
            android:text="Set"/>

        <Spinner
            android:id="@+id/filter_type"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/set_filter_type"
            app:layout_constraintBottom_toBottomOf="@+id/set_filter_type"
            android:entries="@array/filter_type"/>

        <Button
            android:id="@+id/set_filter_type"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/set_baud_rate"
            app:layout_constraintLeft_toRightOf="@+id/filter_type"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="Set"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintLeft_toRightOf="@+id/set_filter_type"
            app:layout_constraintTop_toTopOf="@+id/set_baud_rate"
            app:layout_constraintBottom_toBottomOf="@+id/set_filter_type"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:id="@+id/filter_format"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/divider3"
            app:layout_constraintTop_toTopOf="@+id/set_baud_rate"
            app:layout_constraintBottom_toBottomOf="@+id/set_filter_type"
            android:entries="@array/can_frame_type"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/ref_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/filter_format"
            app:layout_constraintBaseline_toBaselineOf="@+id/set_baud_rate"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="23sp"
            android:text="RefID"/>

        <EditText
            android:id="@+id/ref_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/mask"
            app:layout_constraintTop_toTopOf="@+id/ref_id_title"
            app:layout_constraintBottom_toBottomOf="@+id/ref_id_title"
            android:layout_marginLeft="2dp"
            android:singleLine="true"
            android:text="1FFFFFFF"/>

        <TextView
            android:id="@+id/mask_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/filter_format"
            app:layout_constraintBaseline_toBaselineOf="@+id/set_filter_type"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="23sp"
            android:text="MASK"/>

        <EditText
            android:id="@+id/mask"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/mask_title"
            app:layout_constraintTop_toTopOf="@+id/mask_title"
            app:layout_constraintBottom_toBottomOf="@+id/mask_title"
            android:layout_marginLeft="2dp"
            android:singleLine="true"
            android:text="1FFFFFFF"/>

        <Button
            android:id="@+id/add_hw_filter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@+id/set_baud_rate"
            app:layout_constraintLeft_toRightOf="@+id/ref_id"
            android:layout_marginLeft="5dp"
            android:text="增加硬过滤"/>

        <Button
            android:id="@+id/clear_hw_filter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@+id/add_hw_filter"
            app:layout_constraintLeft_toRightOf="@+id/add_hw_filter"
            android:layout_marginLeft="5dp"
            android:text="清空硬过滤"/>

        <Button
            android:id="@+id/add_sw_filter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@+id/set_filter_type"
            app:layout_constraintLeft_toRightOf="@+id/mask"
            android:layout_marginLeft="5dp"
            android:text="增加软过滤"/>

        <Button
            android:id="@+id/clear_sw_filter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@+id/add_sw_filter"
            app:layout_constraintLeft_toRightOf="@+id/add_sw_filter"
            android:layout_marginLeft="5dp"
            android:text="清空软过滤"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="序号"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="时间"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="通道"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="ID"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="类型"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="长度"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="数据"/>
    </LinearLayout>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
